@model WebAPI.Models.CustomVragenlijst

@{
    ViewBag.Title = "Create";
}

@functions{
    int i = 2;

    private void update()
    {
        i++;
    }
}

<br />

<h2>Voeg vragenlijst toe</h2>

<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Beschrijving, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Beschrijving, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Beschrijving, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />

        <div id="vraagbox">

            <div class="form-group">
                <label class="control-label col-md-2">Vraag 1</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Vragen[0].Beschrijving, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <br />

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn btn-default" type="button" onclick="nieuweVraag();">Nieuwe vraag</button>
            </div>
        </div>

        <br />
        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Voeg vragenlijst toe" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Terug", "Index")
</div>

<script>
    function nieuweVraag() {
        var vraagbox = document.getElementById("vraagbox");
        var span = document.createElement("span");
        span.innerHTML = '<div class="form-group"> <label class="control-label col-md-2">Vraag ' + @i + '</label> <div class="col-md-10"> @Html.EditorFor(model => model.Vragen[i - 1].Beschrijving, new { htmlAttributes = new { @class = "form-control" } }) </div> </div> <br />';
        vraagbox.appendChild(span);
        @{
            update();
        }
    }




</script>
